
//
    sign up modal
#registerModal.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='registerModalLabel', aria-hidden='true')
  .modal-header
    button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
    h3#myModalLabel Sign Up
  .modal-body
    form.well(action="/register", method="post").form-horizontal
      .control-group
        label.control-label(for='email') Email
        .controls
          input#email(type='email', placeholder='Email', name='email', required)
      .control-group
        label.control-label(for='password') Password:
        .controls
          input#password(type='password', placeholder='Password', name='password', required)
      .form-actions
        button.btn.btn-primary(type='submit') Sign Up
        &nbsp;&nbsp;
        button.btn(type='button', data-dismiss='modal', aria-hidden='true') Close
